@model List<PokeApiNueva.Models.Userpkm>
@using PokeApiNueva.Models

@{
    ViewData["Title"] = "Administrar Roles";
}

<h2>Management Users</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Current rol</th>
            <th>New Rol</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="SwitchRole" asp-controller="Admin" method="post" class="d-flex">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="newRole" class="form-select form-select-sm me-2">
                            @foreach (Roles role in Enum.GetValues(typeof(Roles)))
                            {
                                <option value="@role" selected="@(user.Role == role)">
                                    @role
                                </option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Actualizar</button>
                    </form>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
