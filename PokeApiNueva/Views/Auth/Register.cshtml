@model PokeApiNueva.Models.RegisterRequest

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="~/css/RegisterStyles.css" />
</head>
<body>

    <div class="page-wrapper">
        <div class="register-container">
            <h2>Register</h2>
            <form asp-action="Register" method="post" class="register-form">

                <div class="form-group">
                    <label>Name:</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>City:</label>
                    <input asp-for="City" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Security Question:</label>
                    <select asp-for="SecurityQuestion" class="form-select" required>
                        <option value="" selected disabled>Select a security question</option>
                        <option value="PetName">What is the name of your pet?</option>
                        <option value="CousinName">What is the name of your cousin?</option>
                        <option value="MeetingCity">In which city did your parents meet?</option>
                        <option value="FavoriteSoccerTeam">What is your favorite soccer team?</option>
                    </select>

                </div>

                <div class="form-group">
                    <label>Answer:</label>
                    <input asp-for="SecurityAnswer" class="form-control" required />
                </div>

                <button type="submit">Register now</button>
            </form>

            <p>Do you have an account? <a asp-action="Login">Login Here</a></p>
        </div>
    </div>

</body>
</html>
