@model PokeApiNueva.Models.LoginRequest

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>
<body>

    <div class="login-wrapper">
        <div class="login-card">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="email" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" required />
                </div>
                <button type="submit">Login</button>
            </form>
            <p><a asp-action="Register">Create new Account</a></p>
            <p>Forgot your password? <a asp-controller="PasswordRecovery" asp-action="RequestReset">Recovery your password</a></p>
        </div>
    </div>

</body>
</html>
