@model PokeApiNueva.Models.ForgotPasswordRecovery
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recovery password?</title>
    <link rel="stylesheet" href="~/css/Styles1.css" />
</head>
<body>

    <div class="page-wrapper">
        <div class="forgot-password-container">
            <h2>Forgot Your Password?</h2>

            <form method="post" class="forgot-password-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Answer">Security Answer:</label>
                    <input asp-for="Answer" type="text" required />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <button type="submit">Send Request</button>
            </form>

            <p>Remember your Password? <a asp-controller="Auth" asp-action="Login">Login Here</a></p>
        </div>
    </div>

</body>
</html>
